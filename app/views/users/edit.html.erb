<div class="edit-information-container section-container">
  <div class="section-header">
    <h2 class="edit-profile-header">Edit Profile</h2>
  </div>
  <div class="section-content-edit-mod">
    <form action="/users/update">
      <div class="form-input">
        <label>Username</label>
        <input type="text" name="username" value="<%=User.find_by(id: session[:user_id]).username%>">
      </div>
      <div class="form-input">
        <label>Password</label>
        <input type="password" name="password">
      </div>
      <div class="form-input">
        <label>Confirm Password</label>
        <input type="password" name="password_confirmation">
      </div>
      <input type="submit" class="button-1" value="Save">
    </form>
  </div>
</div>
<div class="edit-filters-container section-container">
  <div class="section-header">
    <h2 class="edit-filters-header">Edit Library</h2>
  </div>
  <div class="section-content">
    <% for i in 1..10 do %>
    <div class="section-item">
      <img class="section-item-image" src="/assets/temp.png" alt="name">
      <a href="http://google.com" class="section-item-content">
        <span class="section-item-name">
          Laplacian Filter
        </span>
        <span class="section-item-views">
          43 views
        </span>
      </a>
      <img class="section-item-delete" number="<%=i%>" src="/assets/deleteIcon.png" alt="delete">
    </div>
    <%end%>
  </div>
</div>